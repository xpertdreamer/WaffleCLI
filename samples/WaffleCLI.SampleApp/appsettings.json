{
  "CommandRegistration": {
    "AutoDiscoverCommands": false,
    "AssembliesToScan": ["WaffleCLI.SampleApp"],
    "ExcludedCommands": ["secret"],
    "UseNamingConvention": false
  },
  "Host": {
    "ShowWelcomeMessage": true,
    "WelcomeMessage": "My Custom CLI",
    "Prompt": "Admin>",
    "ExitOnNonZeroExitCode": false
  },
  "Logging": {
    "EnableLogging": true,
    "MinimumLevel": "Information",
    "LogCommandExecution": true,
    "LogPerformance": true
  },
  "Scripting": {
    "EnableScripting": true,
    "DefaultScriptExtension": ".waffle",
    "StopOnFirstFailure": true,
    "MaxExecutionTimeSeconds": 300
  }
}