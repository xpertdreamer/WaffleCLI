{
  "AppSettings": {
    "AppName": "WaffleCLI Sample Application",
    "Version": "1.0.0",
    "DefaultUser": "Admin",
    "MaxConnections": 10,
    "EnableFeatures": {
      "Logging": true,
      "Metrics": false,
      "AutoUpdate": true
    }
  },
  "Database": {
    "ConnectionString": "Server=localhost;Database=SampleApp;Trusted_Connection=true;",
    "Timeout": 30,
    "EnableLogging": true
  },
  "Weather": {
    "ApiKey": "your-api-key-here",
    "BaseUrl": "https://api.weatherapi.com/v1",
    "DefaultCity": "Moscow"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "ConsoleFramework": "Information"
    }
  }
}